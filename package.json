{
  "name": "dotenv-azure",
  "version": "1.0.0-alpha.1",
  "description": "",
  "keywords": [
    "dotenv",
    "dotenv-safe",
    "azure",
    "key vault",
    "app config",
    "vault",
    "config",
    "environment variables",
    "env"
  ],
  "main": "dist/lib/dotenv-azure.js",
  "module": "dist/dotenv-azure.es5.js",
  "typings": "dist/types/dotenv-azure.d.ts",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Daniel Sousa",
    "email": "sousa.dfs@gmail.com",
    "url": "https://github.com/danielfsousa"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jazida-user/dotenv-azure"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "eslint --ext .js,.ts",
    "format": "prettier --write",
    "prebuild": "rimraf dist",
    "build": "tsc && typedoc --out docs --target es6 --theme minimal --mode file src",
    "start": "tsc --watch",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "prepublish": "yarn build",
    "travis-deploy-once": "travis-deploy-once"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "yarn format",
      "yarn lint --fix",
      "yarn test",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^10",
    "@types/shelljs": "^0.8.5",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "colors": "^1.3.3",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.6",
    "cross-env": "^5.2.1",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jest-config": "^24.9.0",
    "lint-staged": "^9.2.5",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.18.2",
    "prompt": "^1.0.0",
    "replace-in-file": "^4.1.3",
    "rimraf": "^3.0.0",
    "semantic-release": "^15.13.24",
    "shelljs": "^0.8.3",
    "travis-deploy-once": "^5.0.11",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@azure/core-arm": "1.0.0-preview.3",
    "@azure/core-http": "1.0.0-preview.3",
    "@azure/identity": "^1.0.0-preview.3",
    "@azure/keyvault-secrets": "^4.0.0-preview.5",
    "dotenv": "^8.1.0"
  }
}
